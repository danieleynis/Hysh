{% extends '_layout.njk' %}
{% block content %}
<br></br>
<br></br>
<br></br>
<div class="row" style="margin-top:60px">
    <div class="col-xs-12 col-sm-8 col-md col-sm-offset-2 col-md-offset-4">
        <form action="/register" method="POST">
            <fieldset>
                <h2> Create an account </h2>
                    <div class="form-group">
                        <input name="username" type="createusername" class="form-control" id="createuser" placeholder="Enter Username" style="width: 200px;">
                    </div>
                    <div class="form-group">
                        <input name="password" type="password" class="form-control" id="createpassword" placeholder="Enter Password" style="width: 200px;">
                    </div>
                    <div class="form-group">
                        <input name="reenterpassword" type="password" class="form-control" id="reenterpassword" placeholder="Re-enter Password" style="width: 200px;">
                    </div>
                    <div class="form-group">
                        <input name="email" type="email" class="form-control" id="email" placeholder="Enter email" style="width: 200px;">
                    </div>
                <button class="btn btn-primary" type="submit" role="button">Sign Up</button>	
		<ul>
		{% for error in errors%}
			<li>hello</li>		
		{% endfor %}
		</ul>     
	    </fieldset>
	</form>
    </div>
</div>
{% endblock %}
