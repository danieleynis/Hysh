{% extends '_layout.njk' %}
{% block content %}
<div class="span4 pull-right">
    <h6> First time to HYSH? <a href="/register">Sign Up</a></h6>
</div>
<br></br>
<br></br>
<br></br>
    <div class="row" style="margin-top:60px">
        <div class="col-xs-12 col-sm-8 col-md col-sm-offset-2 col-md-offset-4">
            <form>
                <fieldset>
                    <h2> Sign in to HYSH </h2>
                    <div class="form-group">
                        <input type="username" class="form-control" id="loginuser" placeholder="Enter Username" style="width: 200px;">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" id="loginpassword" placeholder="Enter Password" style="width: 200px;">
                    </div>
                    <button type="submit" class="btn btn-primary">Sign In</button>
                </fieldset>
            </form>
        </div>
    </div>
{% endblock %}